<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.view.namaz_detail.NamazDetailFragment">

    <include
        android:id="@+id/include_namaz_detail"
        layout="@layout/back_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_namaz_detail_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include_namaz_detail" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_namaz_detail_title"
        style="@style/namaz_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="@string/namaz_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_namaz_detail_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_namaz_detail_description"
        style="@style/namaz_detail_text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ddasdasdasd asda sdasd asdsa dasda sdasd asdas asdas das asd asd asdasd "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_namaz_detail_title" />


</androidx.constraintlayout.widget.ConstraintLayout>